<!DOCTYPE html>
<html>
<head>
  <title>DBCPT</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header>
    <div id="header">
      <div id="header-img" >
        <%= image_tag 'dbc-logo.png' %>
      </div>
      <nav id="nav">
        <ul>
          <% if !current_user %>
          <li>
            <%= link_to "Login", { controller: 'sessions', action: :new }%>
          </li>
          <li>
            <%= link_to "New User", new_user_path %>
          </li>
          <% else %>
          <li>
            <form method="get" action="/users/<%= current_user.id %>">
              <input type="submit" value="go to profile">
            </form>
          </li>
          <li>
            <%= link_to "Logout", {controller: 'sessions', action: :destroy }, method: :delete %>
          </li>
          <% end %>
          <li>
            <%= link_to "Home", '/' %>
          </li>
        </ul>
      </nav>
    </header>


    <div id="main-container">
     <%= yield %>
   </div>

 </body>
 </html>
