<%= render 'form' %>

<p>Pitch a new project idea:</p>
<%= form_for :project, url: {action: 'create'} do |f| %>
  <%= f.label :'Title:' %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :'Description:' %><br>
  <%= f.text_area :description %><br><br>

  <%= f.label :'Cohort:' %><br>
  <%= collection_select(:project, :cohort_id, Cohort.all, :id, :name, prompt: true) %><br><br>

  <%= f.submit :'Pitch Project' %>
<% end %>
