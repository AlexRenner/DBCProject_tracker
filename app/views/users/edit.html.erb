<%= form_for @user do |f| %>
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %><br><br>

  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %><br><br>

  <%= f.label :email %><br>
  <%= f.text_field :email %><br><br>

  <%= f.label :teacher %>
  <%= f.check_box :teacher %>

  <%= f.label :cohort_id %><br>
  <p>Enter 1 for Wolves, 2 for Salamanders or 3 for red Pandas:</p>
  <%= f.text_field :cohort_id %><br><br>

  <%= f.submit :register %>
<% end %>
