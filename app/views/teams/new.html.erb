
<%= form_for :team, url: cohort_teams_path(@cohort) do |f| %>
  <%= f.label :'Team Name:' %><br>
  <%= f.text_field :name %><br>
  <%= f.label :'Project:' %><br>
  <%= collection_select(:team, :project_id, unassigned_projects, :id, :title, prompt: true) %><br>
  <%= f.label :'Unassigned Students:' %><br>
  <% unassigned_students.each do |student| %>
    <%= check_box_tag(:"student_#{student.id}") %>
    <%= label_tag(:"student_#{student.id}", "#{student.first_name.capitalize} #{student.last_name.capitalize}") %><br>
  <% end %>
  <%= f.submit :"Create Team" %>
<% end %>
